pkgname=optimus-manager-openrc
pkgver=20200221
pkgrel=1
pkgdesc="OpenRC script for optimus-manager"
arch=('any')
url="https://github.com/Askannz/optimus-manager"
license=('MIT')
provides=('optimus-manager-openrc')
depends=('openrc' 'displaymanager-openrc' 'elogind')
